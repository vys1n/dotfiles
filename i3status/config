general {
  colors = true
  color_good = "#a3be8c"
  color_degraded = "#ebcb8b"
  color_bad = "#bf616a"
  interval = 1
  separator = " | "
}

order += "volume master"
order += "cpu_usage"
order += "disk /"
#order += "wireless __first__"
order += "battery 0"
order += "battery 1"
order += "memory"
order += "tztime local"

volume master {
    format = " Volume: %volume "
    format_muted = "MUTED "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_usage {
  format = " CPU: %usage "
}

disk "/" {
  format = " Disk: %percentage_used "
}

#wireless __first__ {
#  format_up = " WiFi: (%quality at %ssid) %ip "
#  format_down  = " WiFi: down "
#}

battery 0 {
  format = " Battery : %percentage %status"
  last_full_capacity = true
  threshold_type = percentage
  low_threshold = 30
}

memory {
  memory_used_method = classical
  format=" RAM: %used/%total "
}

tztime local {
    align = "center"
        format = " Date: %d-%m-%y Time: %H:%M "
}

